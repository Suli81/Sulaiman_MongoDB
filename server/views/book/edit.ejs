<%- include("../partials/header.ejs") %>
<%- include("../partials/main_nav.ejs") %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST" action="/book-list/edit/<%= book._id %>"> <!-- Updated action -->
                <div class="form-group">
                    <label for="nameTextField">Workout Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Workout Push/Pull/Legs"
                    name="name" value="<%= book.name %>" required> 
                </div>

                <div class="form-group">
                    <label for="authorTextField">Name</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter your Name"
                    name="author" value="<%= book.author %>" required> 
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Date</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Date"
                    name="published" value="<%= book.published %>" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Exercise List</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextField"
                    placeholder="Enter your exercises"
                    name="description" required><%= book.description %></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Reps</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter Reps"
                    name="price" value="<%= book.price %>" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/bottom_nav.ejs') %>
<%- include('../partials/footer.ejs') %>
